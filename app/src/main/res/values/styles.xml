    <style name="CustomTheme" parent="Theme.AppCompat.Light">
        <item name="actionBarStyle">@style/ActionBarStyle</item>
        <item name="actionBarTabTextStyle">@style/actionBarTabTextStyle</item>
    </style>
    <!--定义ActionBarStyle风格,android:background,v7支持包中的android要去掉-->
    <style name="ActionBarStyle" parent="@style/Widget.AppCompat.ActionBar">
        <item name="background">@color/color_gray</item>
        <item name="backgroundStacked">@color/color_gray</item>
        <item name="titleTextStyle">@style/MyTitleStyle</item>
    </style>

    <style name="MyTitleStyle">
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="actionBarTabTextStyle">
        <item name="android:textColor">@color/color_white</item>
    </style>


    <style name="gameoption">
        <item name="android:textColor">#550055</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">10pt</item>
    </style>

    <style name="Styletest">
        <item name="android:layout_width">80px</item>
        <item name="android:layout_height">80px</item>
        <item name="android:background">@drawable/button1</item>
        <item name="android:layout_margin">10px</item>
    </style>

    <style name="Styletest2" parent="Styletest">
        <item name="android:textColor">#FF0000</item>
    </style>

    <color name="red">#fFF00000</color>

    <style name="AppTheme1" parent="Animation.AppCompat.Dialog"></style>

    <style name="MyDialog" parent="android:Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@color/red</item>
    </style>


    <style name="button_style">
        <item name="android:textSize">40dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:focusable">true</item>
        <item name="android:background">@drawable/button1</item>
        <item name="android:layout_margin">1dp</item>
    </style>

    <style name="button_style2" parent="button_style">
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="Theme.AppCompat"></style>

    <style name="Theme">Theme</style>

    <style name="Animation.AppCompat"></style>

    <style name="Animation"></style>


    <style name="LocationProvider" parent="android:Theme.Holo.Light.DarkActionBar">
         android:textColor="@color/color_Black"
        android:background="#0f0"
        android:gravity="center"
        android:padding="10dp"
    </style>

    <!--自定义控件风格-->
    <style name="TitleStyle">
        <item name="android:background">#0f0</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
    </style>

    <declare-styleable name="TextViewBorder">
        <attr name="borderColor" format="color"/>
    </declare-styleable>


    <style name="foodRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingstars</item>
        <item name="android:minHeight">22dp</item>
        <item name="android:maxHeight">22dp</item>
    </style>

    <style name="layoutForFontStyle" >
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>
    <style name="layoutForButtonStyle" >
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>
    <style name="ButtonStyle" >
        <item name="android:background">@color/orangeMore</item>
        <item name="android:textColor">@color/color_white</item>
    </style>
